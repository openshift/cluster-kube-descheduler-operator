{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "https://github.com/konflux-ci/mintmaker/blob/main/config/renovate/renovate.json?raw=true"
  ],
  "assigneesFromCodeOwners": true,
  "automergeStrategy": "auto",
  "automergeType": "pr",
  "prConcurrentLimit": 5,
  "ignoreTests": false,
  "rebaseLabel": "needs-rebase",
  "rebaseWhen": "behind-base-branch",
  "recreateWhen": "always",
  "commitMessageSuffix": "{{baseBranch}}",
  "ignorePaths": ["**/cmd/**", "**/hack/**", "**/vendor/**", "Dockerfile", "**/site/**", "**/sdk/**", "/keps/**", "/docs/**"],
  "dockerfile": {
    "enabled": true,
    "packageRules": [
      {
        "matchFileNames": [
          "Dockerfile*",
          "*.Dockerfile"
        ],
        "automerge": true,
        "addLabels": ["jira/valid-reference", "lgtm", "approved"]
      }
    ]
  },
  "gomod": {
    "enabled": false
  },
  "vulnerabilityAlerts": {
    "enabled": true
  }
}
